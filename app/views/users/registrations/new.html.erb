<div class="row">
  <div class="col-md-6 user-registration-form">
    <h2>New User Sign Up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, required: true, autofocus: true, class: "form-control", placeholder: "Enter first name" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Enter last name" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, required: true, class: "form-control", placeholder: "Enter email" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Sign up!", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
  
  <div class="col-md-6 np-registration-form">    
    <h2>Nonprofit Sign Up</h2>
    
      <%= form_for(@user, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.fields_for :managers do |manager_form| %>
          <%= manager_form.fields_for :nonprofit do |nonprofit_form| %>
            <div class="form-group">
              <%= nonprofit_form.label :name, "Organization Name" %><br />
              <%= nonprofit_form.text_field :name, required: true, class: "form-control", placeholder: "Enter organization name" %>
            </div>
          <% end %>
        <% end %>
        
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, required: true, class: "form-control", placeholder: "Enter first name" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Enter last name" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, required: true, class: "form-control", placeholder: "Enter email" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Sign up!", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
</div>

